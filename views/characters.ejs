<html>
    <%- include('./partials/head.ejs') %>
    <body>

        <div class="contentView">

            <%- include('./partials/nav.ejs') %>

            <div class="mainWindow">
                <div class="contentWindow">
                    <h2 style="text-align: center;">Characters</h2>

                    <% if (characters.length > 0) { %>
                        <% characters.forEach(characters => { %>


                        <div class="gameDetail" data-game="<%= characters._id %>" data-character="1">
                            <%= characters.name %>
                        </div>

                            <!-- <% characters.players.forEach((player, i = 0) => { %>
                                <% if (characters.players[i].email === user.email) { %>
                                    <div class="gameDetail" data-game="<%= characters._id %>" data-player="<%= characters.players[i]._id %>">
                                        <h3 class="gameDetailName"><%= characters.name %></h3>
                                        <p>Role: </p>
                                        <p class="gameDetailRole"><%= characters.players[i].role %></p>
                                        <% if (characters.players[i].character !== undefined) { %>
                                             <p>Character: </p>
                                             <p><%= characters.players[i].character %></p>
                                        <% } %>
                                    </div>
                                <% } %>
                            <% }); %> -->


                        <% }); %>

                        <form id="playGame" style="display:none" method="post" action="./characters/edit">
                            <input name="gameId" id="inputGame" value="">
                            <input name="playerId" id="inputPlayer" value="">
                        </form>

                        <script>
                            var elements = document.getElementsByClassName("gameDetail");
                            var playForm = document.getElementById("playGame");
                            var inputGame = document.getElementById("inputGame");
                            var inputPlayer = document.getElementById("inputPlayer");

                            var myFunction = function() {
                                var player_id = this.getAttribute("data-player");
                                var game_id = this.getAttribute("data-game");
                                inputGame.value = game_id;
                                inputPlayer.value = player_id;
                                playForm.submit();
                            };

                            for (var i = 0; i < elements.length; i++) {
                                elements[i].addEventListener('click', myFunction, false);
                            }
                        </script>
                    <% }; %>

                    <a href="./create"><button>Create Character</button></a>


                </div>
            </div>

            <%- include('./partials/footer.ejs') %>
        </div>

    </body>
</html>
