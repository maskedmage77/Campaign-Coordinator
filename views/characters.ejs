<html>
    <%- include('./partials/head.ejs') %>
    <body>

        <div class="contentView">

            <%- include('./partials/nav.ejs') %>

            <div class="mainWindow">
                <div class="contentWindow">
                    <h2 class="centerText">Characters</h2>


                    <% if (characters.length > 0) { %>
                        <div class="charactersBox">
                        <% characters.forEach(character => { %>
                            <div class="characterItem">
                                <p class="centerText characterName"><%= character.name %></p>

                                <div class="characterSkillsContainer">
                                    <div class="characterSkill">
                                    <p>strength</p>
                                    <p><%= character.strength %></p>
                                    </div>
                                    <div class="characterSkill">
                                    <p>dexterity</p>
                                    <p><%= character.dexterity %></p>
                                    </div>
                                    <div class="characterSkill">
                                    <p>constitution</p>
                                    <p><%= character.constitution %></p>
                                    </div>
                                    <div class="characterSkill">
                                    <p>wisdom</p>
                                    <p><%= character.wisdom %></p>
                                    </div>
                                    <div class="characterSkill">
                                    <p>intelligence</p>
                                    <p><%= character.intelligence %></p>
                                    </div>
                                    <div class="characterSkill">
                                    <p>charisma</p>
                                    <p><%= character.charisma %></p>
                                    </div>
                                </div>

                                <p class="centerText"><%= character.race %>
                                <% if (character.subrace) { %>
                                     - <%= character.subrace %>
                                <% } %>
                                </p>
                                <% character._class.forEach((_class, i) => { %>
                                    <p class="centerText"><%= _class.name %> - Level: <%= _class.level %></p>
                                <% }); %>

                            </div>




                        <% }); %>

                        </div>

                    <% }; %>

